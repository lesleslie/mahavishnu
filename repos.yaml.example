# Mahavishnu Repository Manifest
#
# This file defines all repositories managed by Mahavishnu.
# Each repository must have: name, package, path, tags, description
# Optional field: mcp (for MCP-related repositories)

repos:
  # ==================== MCP Native Servers ====================
  # These repositories have native MCP server implementations

  - name: "crackerjack"
    package: "crackerjack"
    path: "/Users/les/Projects/crackerjack"
    tags: ["qc", "testing", "python"]
    description: "Quality control and testing framework"
    mcp: "native"

  - name: "session-buddy"
    package: "session_buddy"
    path: "/Users/les/Projects/session-buddy"
    tags: ["session", "management", "python"]
    description: "Session management and checkpointing utility"
    mcp: "native"

  # ==================== MCP Integration Servers ====================
