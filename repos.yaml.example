    description: "Opera Cloud services integration via MCP"
    mcp: "integration"

  - name: "mailgun-mcp"
    package: "mailgun_mcp"
    path: "/Users/les/Projects/mailgun-mcp"
    tags: ["mcp", "email", "integration", "python"]
    description: "Mailgun email service integration via MCP"
    mcp: "integration"

  - name: "unifi-mcp"
    package: "unifi_mcp"
    path: "/Users/les/Projects/unifi-mcp"
    tags: ["mcp", "network", "integration", "python"]
    description: "UniFi network management via MCP"
    mcp: "integration"

  # ==================== Infrastructure Libraries ====================
  # Core libraries used by Mahavishnu and managed repositories

  - name: "mcp-common"
    package: "mcp_common"
    path: "/Users/les/Projects/mcp-common"
    tags: ["mcp", "common", "protocol", "python"]
    description: "Common MCP protocol utilities and base classes"

  - name: "oneiric"
    package: "oneiric"
    path: "/Users/les/Projects/oneiric"
