    path: "/Users/les/Projects/excalidraw-mcp"
    tags: ["mcp", "diagram", "collaboration", "python"]
    description: "Excalidraw diagram integration via MCP"
    mcp: "integration"

  - name: "raindropio-mcp"
    package: "raindropio_mcp"
    path: "/Users/les/Projects/raindropio-mcp"
    tags: ["mcp", "bookmarks", "integration", "python"]
    description: "Raindrop.io bookmark management via MCP"
    mcp: "integration"

  - name: "opera-cloud-mcp"
    package: "opera_cloud_mcp"
    path: "/Users/les/Projects/opera-cloud-mcp"
