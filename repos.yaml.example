# Mahavishnu Repository Manifest - EXAMPLE FILE
#
# This is an EXAMPLE file showing the format for repos.yaml.
# Copy this to settings/repos.yaml and update with your actual repos.
#
# Each repository must have: name, package, path, tags, description
# Optional fields: nickname, role, mcp

repos:
  # ==================== EXAMPLE REPOSITORIES ====================
  # Replace these with your actual repositories

  - name: "my-orchestrator"
    package: "my_orchestrator"
    path: "/Users/YOU/Projects/my-orchestrator"
    nickname: "orch"
    role: "orchestrator"
    tags: ["main", "python"]
    description: "Main orchestration repository"
    mcp: "native"

  - name: "my-quality-tool"
    package: "my_quality_tool"
    path: "/Users/YOU/Projects/my-quality-tool"
    nickname: "qc"
    role: "inspector"
    tags: ["testing", "python"]
    description: "Quality control and testing framework"
    mcp: "native"

  - name: "my-session-manager"
    package: "my_session_manager"
    path: "/Users/YOU/Projects/my-session-manager"
    nickname: "session"
    role: "manager"
    tags: ["session", "memory", "python"]
    description: "Session management and context tracking"
    mcp: "native"

  - name: "my-mcp-integration"
    package: "my_mcp_integration"
    path: "/Users/YOU/Projects/my-mcp-integration"
    nickname: "mcp-int"
    role: "tool"
    tags: ["mcp", "integration", "python"]
    description: "External service integration via MCP"
    mcp: "3rd-party"

  - name: "my-shared-library"
    package: "my_shared_library"
    path: "/Users/YOU/Projects/my-shared-library"
    nickname: "shared"
    role: "foundation"
    tags: ["library", "python"]
    description: "Shared utilities and base classes"

  - name: "my-gui-app"
    package: "my_gui_app"
    path: "/Users/YOU/Projects/my-gui-app"
    nickname: "gui"
    role: "app"
    tags: ["macos", "swiftui", "gui"]
    description: "Native macOS application"

# ==================== FIELD REFERENCE ====================
#
# Required Fields:
#   name:        Human-readable repository name
#   package:     Python package name (use underscores, not hyphens)
#   path:        Absolute path to repository
#   tags:        List of category tags for filtering
#   description: Brief description of repository purpose
#
# Optional Fields:
#   nickname:    Short nickname for quick reference
#   role:        Role from taxonomy (see below)
#   mcp:         MCP server type (see values below)
#
# Role Taxonomy:
#   orchestrator  - Coordinates workflows and cross-repo operations
#   resolver      - Resolves components and dependencies
#   manager       - Manages state, sessions, and knowledge
#   inspector     - Validates code quality and standards
#   builder       - Builds applications and interfaces
#   soothsayer    - Reveals patterns and insights
#   app           - End-user applications with GUIs
#   asset         - UI libraries and style guides
#   foundation    - Foundational utilities and shared code
#   visualizer    - Creates diagrams and documentation
#   extension     - Extends framework capabilities
#   tool          - Specialized tools and integrations
#
# MCP Field Values:
#   "native"      - Repository has its own MCP server implementation
#   "3rd-party"   - Repository integrates external service via MCP
#   null/omit     - Repository is not MCP-related
#
# Tag Guidelines:
#   - Use lowercase alphanumeric
#   - Hyphens and underscores allowed
#   - Common tags: python, mcp, integration, ui, testing, qc
