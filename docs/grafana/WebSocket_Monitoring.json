{
  "dashboard": {
    "title": "WebSocket Ecosystem Monitoring",
    "description": "Real-time monitoring for all WebSocket servers in the Mahavishnu ecosystem",
    "tags": ["websocket", "mahavishnu", "monitoring", "real-time"],
    "timezone": "UTC",
    "schemaVersion": 36,
    "version": "1.0.0",
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "WebSocket Server Overview",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": false,
          "calculation": "lastNotNull"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": {
              "value": 0,
              "result": { "text": "Down", "color": "red" },
              "value": 1,
              "result": { "text": "Up", "color": "green" }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red", "text": "Down" },
                { "value": 1, "color": "green", "text": "Up" }
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "sum(websocket_health{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"}) or vector(0)",
            "legendFormat": "{{server}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "lineWidth": 2,
            "fillOpacity": 0.1
          }
        },
        "targets": [
          {
            "expr": "websocket_connections{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"}",
            "legendFormat": "{{server}}",
            "refId": "B"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 3,
        "title": "Message Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "lineWidth": 2,
            "fillOpacity": 0.1
          }
        },
        "targets": [
          {
            "expr": "rate(websocket_messages_total{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"}[5m])",
            "legendFormat": "{{server}} - {{message_type}}",
            "refId": "C"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 4,
        "title": "Broadcast Duration (p99)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "lineWidth": 2,
            "fillOpacity": 0.1,
            "unit": "s"
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, websocket_broadcast_duration_seconds{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"})",
            "legendFormat": "{{server}}",
            "refId": "D"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "lineWidth": 2,
            "fillOpacity": 0.1
          }
        },
        "targets": [
          {
            "expr": "rate(websocket_errors_total{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"}[5m])",
            "legendFormat": "{{server}} - {{error_type}}",
            "refId": "E"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 6,
        "title": "Mahavishnu Details",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 9 },
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYl"},
            "max": 10,
            "min": 0
          }
        },
        "targets": [
          {
            "expr": "websocket_connections{server=\"mahavishnu\"}",
            "legendFormat": "Connections",
            "refId": "mahavishnu-connections"
          },
          {
            "expr": "sum(rate(websocket_messages_total{server=\"mahavishnu\"}[5m]))",
            "legendFormat": "Msg Rate",
            "refId": "mahavishnu-rate"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "id": 7,
        "title": "Server Health Matrix",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "table-cell-color-background-transperancy"
          }
        ],
        "targets": [
          {
            "expr": "websocket_health{server=~\"$mahavishnu|dhruva|akosha|crackerjack|excalidraw|fastblocks\"}",
            "legendFormat": "{{server}}",
            "formatAs": "table",
            "refId": "health-matrix"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      }
    ]
  }
}
